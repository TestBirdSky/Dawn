<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_setting_bg"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ic_splash_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center|start"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/iv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|start"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_contact_us" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|start"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|start"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_update" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>